FROM python:3.6.4

# set working dir
RUN mkdir -p /usr/src/app
WORKDIR /user/src/app

# add requirements
COPY ./requirements.txt /user/src/app/requirements.txt

# install requirements
RUN pip install -r requirements.txt

# add app
COPY . /user/src/app

# run server
CMD python manage.py run -h 0.0.0.0
